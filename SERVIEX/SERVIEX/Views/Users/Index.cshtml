@model IEnumerable<SERVIEX.Entities.User>

@{
    ViewData["Title"] = "Index";
    ViewData["Subtitle"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3> @ViewData["Subtitle"]</h3>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BornDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gender.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BornDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenderText)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
